---------------------------
 //tooltip
 class MyApp extends StatelessWidget {
   @override
   Widget build(BuildContext context) {
     return Scaffold(
      appBar: AppBar(),
       body: Center(
child:IconButton(

  icon:Icon(Icons.delete),
  onPressed: (){},
  tooltip: "i am button",
)
       ),
     );
   }
 }
