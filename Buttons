//icon button
import'package:flutter/material.dart';

void main(){

  runApp(
    MaterialApp(
debugShowCheckedModeBanner: false,
home: MyApp(),
    ),
  );
}
 
 class MyApp extends StatelessWidget {
   @override
   Widget build(BuildContext context) {
     return Scaffold(
       body: Center(
        child:
         IconButton(
           icon: Icon(Icons.pages),
           onPressed: (){
             print('hello world');
           },
         )
       ),
     );
   }
 }

