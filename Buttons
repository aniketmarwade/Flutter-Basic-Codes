// Raised Button using anonymous function
import'package:flutter/material.dart';

void main(){

  runApp(
    MaterialApp(
debugShowCheckedModeBanner: false,
home: MyApp(),
    ),
  );
}
 
 class MyApp extends StatelessWidget {
   @override
   Widget build(BuildContext context) {
     return Scaffold(
       body: Center(
        child:
         RaisedButton(
           child: Text('Click Here'),
           onPressed: (){
             print('hello world');
           },
         )
       ),
     );
   }
 }

